<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StaticsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="26dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/gray50"

            app:cardCornerRadius="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp"


            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:padding="20dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_more"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            app:cardBackgroundColor="@color/gray50"

            app:cardCornerRadius="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp"


            >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:padding="20dp"
                android:src="@drawable/baseline_more_horiz_24" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_statics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintEnd_toStartOf="@+id/btn_more"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />

        <LinearLayout
            android:id="@+id/txt_current_data"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintEnd_toEndOf="@+id/btn_more"

            app:layout_constraintStart_toStartOf="@+id/btn_back"
            app:layout_constraintTop_toBottomOf="@id/txt_statics">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_weight="1.5"
                app:cardBackgroundColor="@color/gray50"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="02"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </com.google.android.material.card.MaterialCardView>

            <include
                layout="@layout/curve_layout_gray50"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"

                android:layout_weight=".5" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/gray50"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="June"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </com.google.android.material.card.MaterialCardView>

            <include
                layout="@layout/curve_layout_gray50"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"

                android:layout_weight=".5" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/gray50"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2022"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </com.google.android.material.card.MaterialCardView>

            <include
                layout="@layout/curve_layout_gray50"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"

                android:layout_weight=".5" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginStart="-8dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/gray50"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Day"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_dollar_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textColor="@color/black"


            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/amount"
            app:layout_constraintEnd_toStartOf="@+id/amount"
            app:layout_constraintTop_toBottomOf="@+id/txt_current_data" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60,673."
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/txt_current_data" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/decimal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="09"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/amount"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintTop_toTopOf="@+id/amount" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha=".9"
            android:text="Current Balance"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_dollar_sign" />

        <LinearLayout
            android:id="@+id/spend_income_button_ll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"

            android:layout_marginEnd="20dp"
            android:background="@drawable/more_round_rectangle"
            android:orientation="horizontal"
            android:weightSum="2"
            app:cardBackgroundColor="@color/gray50"
            app:cardCornerRadius="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/graph">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="28dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Spend"
                    android:textColor="@color/white"
                    android:textSize="23sp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Spend"
                android:textColor="@color/gray500"
                android:textSize="28sp"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="28dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Income"
                    android:textColor="@color/white"
                    android:textSize="23sp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Income"
                android:textColor="@color/gray500"
                android:textSize="28sp"
                android:visibility="visible" />


        </LinearLayout>

        <com.androidplot.xy.XYPlot
            android:id="@+id/graph"
            style="@style/APDefacto"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            ap:domainTitleVisible="true"
            ap:graphBackgroundColor="@color/white"
            ap:graphMarginLeft="30dp"
            ap:gridBackgroundColor="@color/white"

            ap:lineLabelAlignBottom="center"
            ap:lineLabelInsetBottom="-16dp"
            ap:lineLabelInsetLeft="9dp"
            ap:lineLabelRotationBottom="0"
            ap:lineLabels="left|bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_current_balance" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_spending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spending"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            ap:layout_constraintTop_toBottomOf="@id/spend_income_button_ll"
            ap:layout_constraintStart_toStartOf="parent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_viewall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="@color/gray500"
            android:layout_marginStart="20dp"

            android:textSize="18sp"
            android:layout_marginTop="10dp"
            ap:layout_constraintTop_toBottomOf="@id/spend_income_button_ll"
            ap:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/spend_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_spending"
            tools:itemCount="5"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"


            tools:listitem="@layout/spend_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>